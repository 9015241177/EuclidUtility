<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Zoomable treemap template</title>
    <style>
        html,
        body,
        #scatter {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        }

        #scatter>svg {
        display: block;
        }
    </style>
    <link rel="stylesheet" type="text/css" href="css/scatter.css">    
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/taucharts@2/dist/taucharts.min.css">    
    <script src="https://cdn.jsdelivr.net/npm/d3@4.13.0/build/d3.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="https://cdn.jsdelivr.net/npm/taucharts@2/dist/taucharts.min.js" type="text/javascript"></script>
    
</head>
<body>
    <div id="scatter"></div>
    <script>

d3.json("json/scatter.json", function(err, res) {
        if (!err) {
            var chart = new Taucharts.Chart({
                guide: {
                    color: {
                    brewer: ['color-c', 'color-a', 'color-b']
                    }
                }, 
                data: res,
                type: 'scatterplot',
                x: 'GuiTime',
                y: 'StepsCount',
                color: 'GuiTimeStepsCount',
                plugins: [Taucharts.api.plugins.get('tooltip')(), Taucharts.api.plugins.get('legend')(),Taucharts.api.plugins.get('quick-filter')()],
                size: 'count'
            });
        chart.renderTo('#scatter');
        }
    });

        
    </script>
</body>
</html>